
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.CategoryDTO>

@Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")

<section class="content-header">
    <h1>Category List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Category</a></li>
        <li class="breadcrumb-item active"><a>Category List</a></li>
    </ol>
</section>

<br />

<div class="card-footer">
    <button class="btn btn-primary" onclick="window.location.href='/Admin/Category/AddCategory'">Add Category</button>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>

    <!-- table -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tbody>
                    <tr id="a_@item.ID">

                        <td>
                            @item.CategoryName
                        </td>

                        <td align="center" valign="middle">
                            <!-- atualizar -->
                            <a href="/Admin/Category/UpdateCategory/@item.ID">
                                <img style="width: 15px; height: 20px;" src="~/Areas/Admin/Content/icons/refresh-icon.png" />
                            </a>
                        </td>

                        <td align="center" valign="middle">
                            <!-- remover -->
                            <a href="#">
                                <img onclick="AskQuestion('/Admin/Category/DeleteCategory/', @item.ID)" style="width: 15px; height: 20px;" src="~/Areas/Admin/Content/icons/delete-icon.png" />
                            </a>
                        </td>
                    </tr>
                </tbody>
            }



            <tfoot>
                <tr>
                    <th>Category Name</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

