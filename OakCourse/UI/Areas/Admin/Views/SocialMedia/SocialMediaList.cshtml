
@{
    ViewBag.Title = "SocialMediaList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.SocialMediaDTO>

@Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")

<section class="content-header">
    <h1>Social Media List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Social Media</a></li>
        <li class="breadcrumb-item active"><a>Social Media List</a></li>
    </ol>
</section>

<br />

<div class="card-footer">
    <button class="btn btn-primary" onclick="window.location.href='/Admin/SocialMedia/AddSocialMedia'">Add Social Media</button>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>

    <!-- table -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Link</th>
                    <th>Image</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr id="a_@item.ID">

                        <td>
                            @item.Name
                        </td>

                        <td>
                            @item.Link
                        </td>

                        <td>
                            <img src="~/Areas/Admin/Content/SocialMediaImages/@item.ImagePath" width="45" height="45" />
                        </td>

                        <td align="center" valign="middle">
                            <!-- atualizar -->
                            <a href="/Admin/SocialMedia/UpdateSocialMedia/@item.ID">
                                <img style="width: 15px; height: 20px;" src="~/Areas/Admin/Content/icons/refresh-icon.png" />
                            </a>
                        </td>

                        <td align="center" valign="middle">
                            <!-- remover -->
                            <a href="#">
                                <img onclick="AskQuestion('/Admin/SocialMedia/DeleteSocialMedia/', @item.ID)" style="width: 15px; height: 20px;" src="~/Areas/Admin/Content/icons/delete-icon.png" />
                            </a>
                        </td>
                    </tr>

                }
            </tbody>


                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Link</th>
                        <th>Image</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </tfoot>
            </table>
    </div>
</div>

