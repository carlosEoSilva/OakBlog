
@model DTO.SocialMediaDTO

<div class="box-body">
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(x => x.Name, new {@class="form-control", @placeholder="Social Media Nanem"})
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        <label>Link</label>
        @Html.TextBoxFor(x => x.Link, new {@class="form-control", @placeholder="Social Media Link"})
        @Html.ValidationMessageFor(x => x.Link)
    </div>

    <input type="number" name="ID" value="@Model.ID" hidden/>

    <div class="form-group">
        @Html.LabelFor(x => x.SocialImage, "Select Social Media Image")

        <input type="file" name="SocialImage" accept="image/gif, image/jpeg, image/png" onchange="imagePreview(this, '#SocialImage');" />

        <br />

        @if (Model != null && Model.ImagePath != null)
        {
            <br />
            <img id="SocialImage" src="~/Areas/Admin/Content/SocialMediaImages/@Model.ImagePath" width="200" height="200" />
        }
        else
        {
            <img width="200" height="200" id="SocialImage" />
        }
    </div>

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>

