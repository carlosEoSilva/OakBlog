
@{
    ViewBag.Title = "UnapprovedComments";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.CommentDTO>

<section class="content-header">
    <h1>Comment List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Comment</a></li>
        <li class="breadcrumb-item active"><a>Comment list</a></li>
    </ol>
</section>

<br />

<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>

    <!-- table -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Post Title</th>
                    <th>Comment Content</th>
                    <th>Email</th>
                    <th>Add Date</th>
                    <th>Approve</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr id="a_@item.ID">

                        <td>@item.PostTitle</td>

                        <td>@item.CommentContent</td>

                        <td>@item.Email</td>

                        <td>@item.AddDate.ToString("dd.mm.yyyy")</td>

                        <td align="center" valign="middle">
                            <!-- atualizar -->
                            <a href="/Admin/Comment/ApproveComment/@item.ID">
                                <img style="width: 20px; height: 20px;" src="~/Areas/Admin/Content/icons/approved.png" />
                            </a>
                        </td>

                        <td align="center" valign="middle">
                            <!-- remover -->
                            <a href="#">
                                <img onclick="AskQuestion('/Admin/Comment/DeleteComment/', @item.ID)" style="width: 20px; height: 20px;" src="~/Areas/Admin/Content/icons/reprove.png" />
                            </a>
                        </td>
                    </tr>

                }
            </tbody>


                <tfoot>
                    <tr>
                        <th>Post Title</th>
                        <th>Comment Content</th>
                        <th>Email</th>
                        <th>Add Date</th>
                        <th>Approve</th>
                        <th>Delete</th>
                    </tr>
                </tfoot>
            </table>
    </div>
    @Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")
</div>

