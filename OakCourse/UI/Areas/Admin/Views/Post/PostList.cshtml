
@{
    ViewBag.Title = "PostList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.PostDTO>

@using DTO
@{ 
    CountDTO countdto = (CountDTO)ViewData["AllCounts"];
}

@Html.Partial("~/Areas/Admin/Views/Shared/ModalMessage.cshtml")

<section class="content-header">
    <h1>Post List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Post</a></li>
        <li class="breadcrumb-item active"><a>Post List</a></li>
    </ol>
</section>

<br />

<div class="card-footer">
    <button class="btn btn-primary" onclick="window.location.href='/Admin/Post/AddPost'">Add Post</button>
</div>

<div class="card">

    <div class="row">
        <div class="col-lg-3 col-6">
           
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>@countdto.PostCount</h3>

                    <p>Post Count</p>
                </div>
            </div>
        </div>
       
        <div class="col-lg-3 col-6">
            
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@countdto.ViewCount</h3>

                    <p>Sum View Count</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-6">
            
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>@countdto.CommentCount</h3>

                    <p>Comment Count</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-6">
            
            <div class="small-box bg-danger">
                <div class="inner">
                    <h3>@countdto.MessageCount</h3>

                    <p>Message Count</p>
                </div>
            </div>
        </div>
       
    </div>
    
    <!-- table -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category Name</th>
                    <th>Add Date</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>

        <tbody>
            @foreach (var item in Model)
            {
            <tr id="a_@item.ID">

                <td>
                    @item.Title
                </td>

                <td>
                    @item.CategoryName
                </td>

                <td>
                    @item.AddDate.ToString("dd.MM.yyyy, dddd")
                </td>

                <td align="center" valign="middle">
                    <!-- atualizar -->
                    <a href="/Admin/Post/UpdatePost/@item.ID">
                        <img style="width: 15px; height: 20px;" src="~/Areas/Admin/Content/icons/refresh-icon.png" />
                    </a>
                </td>

                <td align="center" valign="middle">
                    <!-- remover -->
                    <a href="#">
                        <img onclick="AskQuestion('/Admin/Post/DeletePost/', @item.ID)" style="width: 15px; height: 20px;" src="~/Areas/Admin/Content/icons/delete-icon.png" />
                    </a>
                </td>

            </tr>
            }
        </tbody>

            <tfoot>
                <tr>
                    <th>Title</th>
                    <th>Category Name</th>
                    <th>Add Date</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


