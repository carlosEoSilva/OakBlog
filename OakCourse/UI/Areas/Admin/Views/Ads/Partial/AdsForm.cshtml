@model DTO.AdsDTO

<div class="box-body">
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Social Media Nanem" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        <label>Link</label>
        @Html.TextBoxFor(x => x.Link, new { @class = "form-control", @placeholder = "Ad Link" })
        @Html.ValidationMessageFor(x => x.Link)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.AdsImage)

        <input type="file" name="AdsImage" accept="image/gif, image/jpeg, image/png"
               onchange="$('#AdsImage')[0].src= window.URL.createObjectURL(this.files[0])" />

        <br />

        @if (Model != null && Model.ImagePath != null)
        {
            <br />
            <img src="~/Areas/Admin/Content/AdsImage/@Model.ImagePath" widht="300" height="200" />
        }
        else
        {
            <img widht="300" height="200" id="AdsImage" />
        }
    </div>

    <div class="form-group">
        <label>Image Size</label>
        @Html.TextBoxFor(x => x.Imagesize, new { @class = "form-control", @placeholder = "Image Size" })
        @Html.ValidationMessageFor(x => x.Imagesize)
    </div>

    <input type="number" name="ID" value="@Model.ID" hidden />

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</div>
