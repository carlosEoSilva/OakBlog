
@{
    ViewBag.Title = "AdsList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}


@model List<DTO.AdsDTO> 

<section class="content-header">
    <h1>Ads List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a>Admin</a></li>
        <li class="breadcrumb-item"><a>Ads</a></li>
        <li class="breadcrumb-item active"><a>Ads List</a></li>
    </ol>
</section>

<br />

<div class="card-footer">
    <button class="btn btn-primary" onclick="window.location.href='/Admin/Ads/AddAds'">Add Ads</button>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>

    <!-- table -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Link</th>
                    <th>Image</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tbody>
                    <tr id="a_@item.ID">

                        <td>
                            @item.Name
                        </td>

                        <td>
                            @item.Link
                        </td>

                        <td>
                            <img src="~/Areas/Admin/Content/AdsImage/@item.ImagePath" width="40" height="40" />
                        </td>

                        <td align="center" valign="middle">
                            <!-- atualizar -->
                            <a href="/Admin/Ads/UpdateAds/@item.ID">
                                <br />
                                <img style="width: 15px; height: 20px;" src="~/Areas/Admin/Content/icons/refresh-icon.png" />
                            </a>
                        </td>

                        <td align="center" valign="middle">
                            <!-- remover -->
                            <a href="#">
                                <br />
                                <img style="width: 15px; height: 20px;" src="~/Areas/Admin/Content/icons/delete-icon.png" />
                            </a>
                        </td>
                    </tr>
                </tbody>
            }



            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Link</th>
                    <th>Image</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

